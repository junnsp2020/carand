<div class="container">
	<div class="row">
		<div class="col-xs-10">
			<h2>通報一覧</h2>
				<table class="table table-bordered">
					<tbody>
						<% @reports.each do |report| %>
							<tr>
								<td>通報id</td>
								<td>通報日時</td>
								<td>通報された商品</td>
								<td>通報者</td>
								<td>通報の種類</td>
								<td>通報内容</td>
							</tr>
							<tr>
								<td><%= report.id %></td>
								<td><%= link_to "#{report.created_at.strftime("%Y-%m-%d")}", administers_report_path(report) %></td>
								<td><%= link_to report.product.name, product_path(report.product.id)  %></td>
								<td><%= report.user.first_name %></td>
								<td><%= report.subject %></td>
								<td><%= report.content %></td>
							</tr>
						<% end %>
					</tbody>
				</table>
		</div>
	</div>
</div>
