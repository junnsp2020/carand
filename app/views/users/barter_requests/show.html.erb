<div class="container">
	<div class="row">
		<div class="col-xs-10">
				<table class="table table-bordered">
					<tboy>
						<tr>
							<td>
								<%= attachment_image_tag @barter_request, :image, format: "jpeg", fallback: "no_image.jpg", size: "300x300", class: "center-block" %>
							</td>
						</tr>
						<tr>
							<td>
								<h3 class="col-xs-12"><%= @barter_request.name %></h3>
							</td>
						</tr>
						<tr>
							<td>
								<div class="col-xs-3">一言コメント</div><%= @barter_request.comment %>
						    </td>
						</tr>
						<tr>
							<td>
								<div class="col-xs-3">商品の状態</div><%= @barter_request.product_condition %>
							</td>
						</tr>
						<tr>
							<td>
								<div class="col-xs-3">商品の説明</div>
						    </td>
						</tr>
						<tr>
							<td width="100%" height="300px">
								<%= @barter_request.introduction %>
							</td>

						</tr>
					</tboy>
				</table>
		</div>
	</div>
</div>
