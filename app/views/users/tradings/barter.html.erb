<div class="container">
	<div class="row">
		<div class="col-xs-10">
			<h4>交換取引 一覧</h4>
			<% @tradings.each do |trading| %>
				<table class="table table-bordered">
					<tboy>
						<tr>
							<td width="10%">
								<%= link_to trading_path(trading.id) do %>
									<%= attachment_image_tag trading.product, :image, format: "jpeg", fallback: "no_image.jpg", size: "50x50" %>
								<% end %>
							</td>
							<td width="30%">
								<%= link_to trading.product.name, trading_path(trading.id) %>
							</td>
							<td width="35%">
								<% if trading.buyer_id == current_user.id && trading.payment_status == "交換(購入者)" %>
									<%= link_to "出荷(送り状番号通知)をお願いします", trading_path(trading.id), class: "btn btn-danger" %>
								<% elsif trading.seller_id == current_user.id && trading.shipment_status == "交換(出品者)" %>
									<%= link_to "出荷(送り状番号通知)をお願いします", trading_path(trading.id), class: "btn btn-danger" %>
								<% end %>
								<% if trading.buyer_id == current_user.id && trading.payment_status == "番号確認完了(購入者)" %>
									<%= link_to "交換者の評価をお願いします", trading_path(trading.id), class: "btn btn-danger" %>
								<% elsif trading.seller_id == current_user.id && trading.shipment_status == "番号確認完了(出品者)" %>
									<%= link_to "交換者の評価をお願いします", trading_path(trading.id), class: "btn btn-danger" %>
								<% end %>
								<% if trading.buyer_id == current_user.id && trading.payment_status == "交換お疲れ様でした(購入者)" %>
				　　					<%= link_to "取引済", trading_path(trading.id), class: "btn btn-default" %>
								<% elsif trading.seller_id == current_user.id && trading.shipment_status == "交換お疲れ様でした(出品者)" %>
				　　					<%= link_to "取引済", trading_path(trading.id), class: "btn btn-default" %>
								<% end %>
							</td>
							</td>
							<td width="20%">
								<%= trading.product.created_at.strftime('%Y-%m-%d') %>
							</td>
						</tr>
					</tboy>
				</table>
			<% end %>
		</div>
	</div>
</div>