<div class="container">
	<div class="row">
		<div class="col-xs-10">

			<h4>出品した商品</h4>
			<% @products.each do |product| %>
				<table class="table table-bordered">
					<tboy>
						<tr>
							<td width="10%">
								<%= link_to product_path(product.id) do %>
									<%= attachment_image_tag product, :image, format: "jpeg", fallback: "no_image.jpg", size: "60x60", class: "center-block" %>
								<% end %>
							</td>
							</td>
								<td width="20%">
								<%= link_to product.name, product_path(product.id) %>
							</td>
							<td width="10%">
								<%= number_to_currency(product.price, :unit => "￥", :precision => 0) %>
							</td>
							<td width="15%">
								<% if product.sale_status == "売り切れ" %>
									<%= link_to "取引ページへ", trading_path(Trading.find_by(product_id: product.id)), class: "btn-sm btn-success col-xs-12" %>
								<% end %>
							</td>
							<td width="10%">
								<% if product.sale_status == "販売中" %>
									<%= link_to "販売中", product_path(product.id), class: "btn-sm btn-info" %>
								<% else %>
									<span class="button1"><%= link_to "売却済", product_path(product.id), class: "btn-sm btn-danger" %></span>
								<% end %>
							</td>
							<td width="10%">
								<%= product.created_at.strftime('%Y-%m-%d') %>
						    </td>
						</tr>
					</tboy>
			<% end %>
			<%= @count %>
		</div>
	</div>