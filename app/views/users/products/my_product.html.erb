<div class="container">
	<div class="row">
		<div class="col-xs-10">

			<h3 class="my-product-page">出品した商品</h3>
			<% if @products.blank? %>
	        	<h4 class="no-barter">出品した商品はありません</h4>
	      	<% end %>
			<% @products.each do |product| %>
				<table class="table table-bordered" style="border: 2px #808080 solid;">
					<tboy>
						<tr>
							<td width="10%">
								<%= link_to product_path(product.id) do %>
									<%= attachment_image_tag product, :image, format: "jpeg", fallback: "no_image.jpg", size: "60x60", class: "center-block" %>
								<% end %>
							</td>
							</td>
								<td width="20%">
								<%= link_to product.name, product_path(product.id) %>
							</td>
							<td width="10%">
								<%= number_to_currency(product.price, :unit => "￥", :precision => 0) %>
							</td>
							<td width="10%">
								<% if product.sale_status == "販売中" %>
									<%= link_to "商品の編集", edit_product_path(product.id), class: "btn-sm btn-success" %>
								<% end %>
							</td>
							<td width="10%">
								<% if product.sale_status == "販売中" %>
									<%= link_to "販売中", product_path(product.id), class: "btn-sm btn-info" %>
								<% end %>
							</td>
							<td width="10%">
								<%= product.created_at.strftime('%Y-%m-%d') %>
						    </td>
						</tr>
					</tboy>
			<% end %>
			<%= @count %>
		</div>
	</div>