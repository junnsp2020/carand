<div class="container">
	<div class="row">
		<div class="col-xs-10">
			<h3>購入 取引一覧へ</h3>
　　　　			<p>購入取引件数<%= link_to current_user.active_tradings.count, bought_tradings_path(current_user.id) %>件</p>


			<h4>出品中</h4>
			<% @products.each do |product| %>
				<table class="table table-bordered">
					<tboy>
						<tr>
							<td width="10%">
								<%= attachment_image_tag product, :image, format: "jpeg", fallback: "no_image.jpg", size: "50x50" %>
							</td>
							<td width="40%">
								<%= link_to product.name, product_path(product.id) %>
							</td>
							<td width="40%">
								<%= number_to_currency(product.price, :unit => "￥", :precision => 0) %>
							</td>
							<td width="10%">
								<%= product.created_at.strftime('%Y-%m-%d') %>
							</td>
						</tr>
					</tboy>
				</table>
			<% end %>
		</div>
	</div>
</div>