<div class="container">
	<div class="row">
		<div class="ranking col-xs-3">
			<h4 class="ranks-title">
				<% if @category %>
					<p><%= @category.name %></p>
					<p><%= "交換人気ランキング" %></p>
				<% else %>
					<p><%= "全カテゴリー内" %></p>
					<p><%= "交換人気ランキング" %></p>
				<% end %>
			</h4>
			<table class="table table-bordered">
				<tboy>
				<% @ranks.each.with_index(1) do |rank, index| %>
					<tr class="ranks-images">
						<td>
							<%= link_to product_path(rank.id) do %>
								<%= attachment_image_tag rank, :image, format: "jpeg", fallback: "no_image.jpg", size: "130x130", class: "center-block" %>
							<% end %>
							<span class="rank-number">第<%= index %>位</span>
							<% if index == 1 %>
								<span><i class="fas fa-crown"></i></span>
								<span><i class="fas fa-crown"></i></span>
								<span><i class="fas fa-crown"></i></span>
								<h4 class="rank-number"><%= "今最もアツい商品！" %></h4>
							<% end %>
							<% if index == 2 %>
								<span><i class="fas fa-crown"></i></span>
								<span><i class="fas fa-crown"></i></span>
								<h4 class="rank-number"><%= "大人気商品！" %></h4>
							<% end %>
							<% if index == 3 %>
								<span><i class="fas fa-crown"></i></span>
								<h4 class="rank-number"><%= "注目者多数！" %></h4>
							<% end %>
							<% if index == 4 %>
								<span><i class="fas fa-gem"></i></span>
							<% end %>
							<% if index == 5 %>
								<span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
							<% end %>
						</td>
					</tr>
				<% end %>
				</tboy>
			</table>
	    </div>
	    <div class="col-xs-8">
			<h3 class="all-products">商品一覧  全<%= @products.total_count %>件</h3>
			<% @products.each do |product| %>
		        <div class="col-xs-3">
					<div class="products-index-image">
						<div class="sale-status">
							<%= link_to product_path(product.id) do %>
								<% if product.sale_status != "販売中" %>
									<%= link_to "売切", product_path(product.id), class: "btn-sm btn-danger" %>
								<% elsif product.sale_status == "販売中" && product.propriety == "交換可能" %>
									<%= link_to "販売中", product_path(product.id), class: "btn-sm btn-info" %>
									<%= link_to "交換可", product_path(product.id), class: "btn-sm btn-success" %>
								<% else %>
									<%= link_to "販売中", product_path(product.id), class: "btn-sm btn-info" %>
								<% end %>
							<% end %>
						</div>
							<%= link_to product_path(product.id) do %>
								<%= attachment_image_tag product, :image, format: "jpeg", fallback: "no_image.jpg", size: "130x130", class: "center-block" %>
							<% end %>
					</div>
				</div>
			<% end %>
		<div class="pagenate"><%= paginate @products, class: "paginate" %></div>
		</div>
	</div>
</div>