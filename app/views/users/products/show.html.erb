<div class="container">
	<div class="row">
		<div class="col-xs-10">
				<table class="table table-bordered">
					<tboy>
						<tr>
							<td>
								<%= attachment_image_tag @product, :image, format: "jpeg", fallback: "no_image.jpg", size: "300x300", class: "center-block" %>
							</td>
						</tr>
						<tr>
							<td>
								<h3 class="col-xs-12"><%= @product.name %></h3>
								<h4 class="col-xs-12"><%= number_to_currency(@product.price, :unit => "￥", :precision => 0) %></h4>
							</td>
						</tr>
						<tr>
							<td>
								<div class="col-xs-3">商品の説明</div>
						    </td>
						</tr>
							<td width="100%" height="300px">
								<%= @product.introduction %>
							</td>
						<tr>
							<td>
								<div class="col-xs-3">商品の状態</div><%= @product.status %>
							</td>
						</tr>
						<tr>
							<td>
								<div class="col-xs-3">送料の負担</div><%= @product.postage_responsibility %>
							</td>
						</tr>
						<tr>
							<td>
								<div class="col-xs-3">送料</div><%= @product.postage %>
							</td>
						</tr>
						<tr>
							<td>
							<%= button_to "購入ページへ進む", new_trading_path, {method: :get, class: "btn-sm btn-danger col-xs-12", params:{product_id: @product.id}} %>
							</td>
						</tr>
						<tr>
							<td>
						 	<%= button_to "この商品は交換可能です", product_barter_requests_path(@product.id), {method: :get, class: "btn-sm btn-info col-xs-12" } %>
							</td>
						</tr>
					</tboy>
				</table>
		</div>
	</div>
</div>
